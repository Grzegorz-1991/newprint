<div class="container">
    <div class="row justify-content-center">
        <div class="col-12">
        <%= form_with(scope: :session, url: administrator_path, class: "mb-3", local: true)  do |f| %>
            <div class="form-group row">
                <%= f.label :login, class: "col-1 mr-2 col-form-label font-weight-bold" %>
                <div class="col-12">
                <%= f.text_field :username, class: "form-control", placeholder: "Login" %>
                </div>
            </div>
            <div class="form-group row">
              <%= f.label :hasło, class: "col-1 mr-2 col-form-label font-weight-bold" %>
              <div class="col-12"> 
                <%= f.password_field :password, class: "form-control", placeholder: "Hasło" %>
              </div>
            </div>
            <div class="form-group row justify-content-center">
                    <%= f.submit 'Zaloguj', class: "btn btn-outline-success" %>
            </div>
        <% end %>

        </div>
    </div>
</div>